<?xml version="1.0" encoding="UTF-8" ?>
<Window
    x:Class="CapHotkey.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CapHotkey"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid
        RowDefinitions="40, *" x:Name="Window">
        <Grid Grid.Row="0">
            <Grid ColumnDefinitions="*">
                <Grid x:Name="AppTitleBar" Grid.Column="0" >
                    <TextBlock x:Name="AppTitleTextBlock" 
                        x:Uid="AppTitleText"
                        Text=""
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="KeyLog" x:FieldModifier="Public" FontSize="64" Margin="16, 16, 16, 16" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
